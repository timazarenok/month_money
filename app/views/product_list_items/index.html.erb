<p id="notice"><%= notice %></p>

<h1>Product List Items</h1>

<table>
  <thead>
    <tr>
      <th>Product category</th>
      <th>Value</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @product_list_items.each do |product_list_item| %>
      <tr>
        <td><%= product_list_item.product_category %></td>
        <td><%= product_list_item.value %></td>
        <td><%= link_to 'Show', product_list_item %></td>
        <td><%= link_to 'Edit', edit_product_list_item_path(product_list_item) %></td>
        <td><%= link_to 'Destroy', product_list_item, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

